<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons"
	xmlns:core="sap.ui.core">
	<form:SimpleForm width="{oFiexibleLayout>/Width}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1"
		columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
		<form:content>
			<VBox>
				<Label text="{i18n>TotalExpenditure}" design="Bold" labelFor="ipTotalExpen" wrapping="true"/>
				<Input value="{oSOModel>/ATTACHMENTS/DOC_DESCRIPTION}" id="ipTotalExpen" fieldGroupIds="InputField" required="true" editable="true"
					width="100%"/>
				<layoutData>
					<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
				</layoutData>
			</VBox>
			<VBox>
				<Label text="{i18n>PeriodStartDate}" design="Bold" labelFor="dpPeriodStDate" wrapping="true"/>
				<DatePicker value="{oSOModel>/ATTACHMENTS/DOC_EXPIRY}" id="dpPeriodStDate" fieldGroupIds="DateField" required="true" editable="true"
					width="100%"/>
				<layoutData>
					<layout:GridData span="XL6 L6 M6 S12" linebreak="false"/>
				</layoutData>
			</VBox>
			<VBox>
				<Label text="{i18n>PeriodEndDate}" design="Bold" labelFor="dpPeriodEtDate" wrapping="true"/>
				<DatePicker value="{oSOModel>/ATTACHMENTS/DOC_EXPIRY}" id="dpPeriodEtDate" fieldGroupIds="DateField" required="true" editable="true"
					width="100%"/>
				<layoutData>
					<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
				</layoutData>
			</VBox>
			<VBox>
				<Table id="idNPIMarketing" inset="false" mode="MultiSelect" items="{oSOModel>/ATTACHMENTSSET}">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<ToolbarSpacer/>
								<Button text="{i18n>btnAdd}" press="AddAttachments"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="{i18n>AttachmentType}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>Amount}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>NoOfSpots}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>PeriodStartDate}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>PeriodEndDate}"/>
						</Column>
						<Column hAlign="End">
							<Text text=""/>
						</Column>
						<Column hAlign="End">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem vAlign="Middle">
							<cells>
								<VBox>
									<ComboBox visible="{oSOModel>INPUT}" selectedKey="{oSOModel>DOCUMENT_TYPE}" items="{oMainModel>/businessCode}" width="100%"
										fieldGroupIds="ComboboxField" required="true" editable="true">
										<core:Item key="{oMainModel>BUS_CODE}" text="{oMainModel>CODE_DESC}"/>
									</ComboBox>
									<Text text="{oSOModel>DOCUMENT_TYPE}" visible="{oSOModel>TEXT}"/>
								</VBox>
								<VBox>
									<TextArea visible="{oSOModel>INPUT}" value="{oSOModel>DOC_DESCRIPTION}" fieldGroupIds="InputField" required="true" editable="true"
										width="100%"/>
									<Text text="{oSOModel>DOC_DESCRIPTION}"/>
								</VBox>
								<VBox>
									<DatePicker value="{oSOModel>DOC_EXPIRY}" visible="{oSOModel>INPUT}" fieldGroupIds="DateField" required="true" editable="true" width="100%"/>
									<Text text="{oSOModel>DOC_EXPIRY}" visible="{oSOModel>TEXT}"/>
								</VBox>
								<Text text=""/>
								<VBox>
									<Button icon="sap-icon://edit" press="onEditAttachmentTable" visible="{oSOModel>TEXT}"/>
									<Button icon="sap-icon://save" press="onSaveAttachmentTable" visible="{oSOModel>INPUT}"/>
								</VBox>
								<Button icon="sap-icon://delete" press="onDeleteAttachmentTable"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<layoutData>
					<layout:GridData span="XL12 L12 M12 S12" linebreak="true"/>
				</layoutData>
			</VBox>
			<VBox>
				<Table id="idNPIMarketing2" inset="false" mode="MultiSelect" items="{oSOModel>/ATTACHMENTSSET}">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<Title text="{i18n>ProductListingWithOtherRetailer}" level="H2"/>
								<ToolbarSpacer/>
								<Button text="{i18n>btnAdd}" press="AddAttachments"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="{i18n>NameOfRetailer}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>RSP}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>StartDate}"/>
						</Column>
						<Column hAlign="End">
							<Text text=""/>
						</Column>
						<Column hAlign="End">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem vAlign="Middle">
							<cells>
								<VBox>
									<ComboBox visible="{oSOModel>INPUT}" selectedKey="{oSOModel>DOCUMENT_TYPE}" items="{oMainModel>/businessCode}" width="100%"
										fieldGroupIds="ComboboxField" required="true" editable="true">
										<core:Item key="{oMainModel>BUS_CODE}" text="{oMainModel>CODE_DESC}"/>
									</ComboBox>
									<Text text="{oSOModel>DOCUMENT_TYPE}" visible="{oSOModel>TEXT}"/>
								</VBox>
								<VBox>
									<TextArea visible="{oSOModel>INPUT}" value="{oSOModel>DOC_DESCRIPTION}" fieldGroupIds="InputField" required="true" editable="true"
										width="100%"/>
									<Text text="{oSOModel>DOC_DESCRIPTION}"/>
								</VBox>
								<VBox>
									<Button icon="sap-icon://edit" press="onEditAttachmentTable" visible="{oSOModel>TEXT}"/>
									<Button icon="sap-icon://save" press="onSaveAttachmentTable" visible="{oSOModel>INPUT}"/>
								</VBox>
								<Button icon="sap-icon://delete" press="onDeleteAttachmentTable"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<layoutData>
					<layout:GridData span="XL12 L12 M12 S12" linebreak="true"/>
				</layoutData>
			</VBox>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>