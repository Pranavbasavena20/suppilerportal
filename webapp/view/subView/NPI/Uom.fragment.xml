<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
        <Table id="tbUOM" items="{oNPI>/PRODUCT_UOM_LIST}" growing="true" growingThreshold="10" growingScrollToLoad="true"
							noDataText="{i18n>TxtRemarkNoDataText}" updateFinished="onUpdateFinished">
							<headerToolbar >
								<OverflowToolbar>
									<ToolbarSpacer/>
									<Button icon="sap-icon://add" text="{i18n>BtnUOM}" type="Emphasized" press="onUOM"/>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column width="{= ${device>/system/desktop} ? '8rem':'auto'}">
									<Text text="{i18n>Uom}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>UoMQuantity}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>LowerUnit}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>BaseUnit}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>OrderUnit}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true" width="{= ${device>/system/desktop} ? '11rem':'auto'}">
									<Text text="{i18n>Barcode}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text=" {i18n>GrossWeight}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>NetWeight}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true" width="{= ${device>/system/desktop} ? '8rem':'auto'}">
									<Text text="{i18n>NetWeightUnit}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>Depth}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>Width}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>Height}" wrapping="true"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="{i18n>Volume}" wrapping="true"/>
								</Column>
								<Column hAlign="End">
									<Text text=""/>
								</Column>
							</columns>
							<items >
								<ColumnListItem type="Active">
									<cells>
										<Input value="{oNPI>UOM}"/>
										<Input value="{oNPI>UOM_NO_CONV}"/>
										<Text text="EA"></Text>
										<CheckBox selected="{oNPI>BUN}"></CheckBox>
										<CheckBox selected="{oNPI>OUN}"></CheckBox>
										<Input value="{oNPI>BARCODE}"></Input>
										<Input value="{oNPI>WEIGHT}"></Input>
										<Input value="{oNPI>NET_WEIGHT}"></Input>
										<Input value="{oNPI>WT_UNIT}" showValueHelp="true"></Input>
										<Input value="{oNPI>DEPTH}" change="onGetVolume"></Input>
										<Input value="{oNPI>WIDTH}" change="onGetVolume"></Input>
										<Input value="{oNPI>HEIGHT}" change="onGetVolume"></Input>
										<Text text="{oNPI>Volume}"></Text>
										<Button icon="sap-icon://delete" visible="{oNPI>Button}"></Button>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
            </form:content>
        </form:SimpleForm>
</core:FragmentDefinition>
