<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons"
	xmlns:core="sap.ui.core">
	<form:SimpleForm width="{oFiexibleLayout>/Width}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1"
		columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
		<form:content>
			<VBox>
				<Table id="idNPIProductAttr" width="100%" inset="false" mode="MultiSelect" items="{oSOModel>/ATTACHMENTSSET}">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<Title text="{i18n>ProductAtrributes}"></Title>
								<ToolbarSpacer/>
								<Button text="{i18n>btnAdd}" press="AddAttachments"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="{i18n>ForecastAttributeCode}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>ForecastAttributeValue}"/>
						</Column>
						<Column hAlign="End">
							<Text text=""/>
						</Column>
						<Column hAlign="End">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem vAlign="Middle">
							<cells>
								<Input></Input>
								<Input></Input>
								<VBox>
									<Button icon="sap-icon://edit" press="onEditAttachmentTable" visible="{oSOModel>TEXT}"/>
									<Button icon="sap-icon://save" press="onSaveAttachmentTable" visible="{oSOModel>INPUT}"/>
								</VBox>
								<Button icon="sap-icon://delete" press="onDeleteAttachmentTable"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<layoutData>
					<layout:GridData span="XL12 L12 M12 S12" linebreak="true"/>
				</layoutData>
			</VBox>
			<core:Title text="{i18n>ProductQuality}"/>
			<VBox>
				<Label text="{i18n>ProductTrend}" design="Bold" labelFor="taProductTrend" wrapping="true"/>
				<TextArea value="{oSOModel>/REMARKS}" id="taProductTrend" fieldGroupIds="InputField" required="true" editable="true" width="100%"/>
				<layoutData>
					<layout:GridData span="XL12 L12 M12 S12" linebreak="true"/>
				</layoutData>
			</VBox>
			<VBox>
				<Label text="{i18n>ProductOriginality}" design="Bold" labelFor="taProductOriginality" wrapping="true"/>
				<TextArea value="{oSOModel>/CATERGORY_EXECUTIVE_REMARKS}" id="taProductOriginality" required="true" editable="true" width="100%"/>
				<layoutData>
					<layout:GridData span="XL12 L12 M12 S12" linebreak="true"/>
				</layoutData>
			</VBox>
			<VBox>
				<Table id="idNPIProductAtt3" width="100%" inset="false" mode="MultiSelect" items="{oSOModel>/ATTACHMENTSSET}">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<Title text="{i18n>ProductComp}"></Title>
								<ToolbarSpacer/>
								<Button text="{i18n>btnAdd}" press="AddAttachments"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="{i18n>BrandName}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>Packaging}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>RSP}"/>
						</Column>
						<Column hAlign="End">
							<Text text=""/>
						</Column>
						<Column hAlign="End">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem vAlign="Middle">
							<cells>
								<ComboBox></ComboBox>
								<Input></Input>
								<Input></Input>
								<VBox>
									<Button icon="sap-icon://edit" press="onEditAttachmentTable" visible="{oSOModel>TEXT}"/>
									<Button icon="sap-icon://save" press="onSaveAttachmentTable" visible="{oSOModel>INPUT}"/>
								</VBox>
								<Button icon="sap-icon://delete" press="onDeleteAttachmentTable"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<layoutData>
					<layout:GridData span="XL12 L12 M12 S12" linebreak="true"/>
				</layoutData>
			</VBox>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>