<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <form:SimpleForm width="100%" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="1" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
        <form:content>
            <VBox>
                <Label text="{i18n>Remarks}" design="Bold" labelFor="taSOVendorRemarks" wrapping="true" />
                <TextArea value="{oNPI>/COMMENT_LIST/COMMENT}" id="taRemarks" fieldGroupIds="InputField" required="true" editable="true" width="100%" />
                <layoutData>
                    <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                </layoutData>
            </VBox>
            <VBox>
                <Label text="{i18n>JustifyingReasonToJoin}" design="Bold" labelFor="taJusityReason" wrapping="true" />
                <TextArea value="{oNPI>/PRODUCT_JUSTIFICATION/JUSTIFICATION}" id="taJusityReason" required="true" editable="true" width="100%" />
                <layoutData>
                    <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                </layoutData>
            </VBox>
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
